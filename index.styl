color-text = #494947;
color-text-light = #7C7C7C;

header-height = 130px;

media-high = "screen and (min-width: 1920px)"


media-pc = "screen and (min-width:1024px)"

media-tablet = "screen and (min-width:768px)"

media-mobile = "screen and (min-width:320px)"



clearfix()
  &:after
    content ""
    display table
    clear both

.right
  float right

font-default()
    font-family helvetica, "游ゴシック体", 'Hiragino Sans GB', 'Microsoft Yahei Light', 'Microsoft YaHei', 'WenQuanYi Micro Hei', lucida, sans-serif

simsun()
    font-family Arial, Helvetica, tahoma, verdana, "宋体", SimSun, "华文细黑", STXihei, sans-serif

fangsong()
    font-family Georgia, "Times New Roman", "FangSong", "仿宋", STFangSong, "华文仿宋", serif

body
html
  padding 0
  margin 0
  font-default();
  width 100%
  height 100%
  background-color white
  color #494947

*
  box-sizing border-box
a
  color inherit

/////////////////////////
//        Header
//////////////////////////

.site-header
  position relative
  width 100%;
  top 0;
  left 0;
  text-align center
  margin-bottom 20px
.site-header-logo
  display  block
  width  100%
  text-decoration  none
  margin-top  20px
  font-size  48px
  line-height  70px
  text-transform  uppercase
  &:hover
    color #fff500
.site-header-content
  nav
    color color-text-light
    text-transform capitalize
    a
      text-decoration: none
      &:hover
        text-decoration: underline
.site-slogan
  margin-top 20px
  color color-text
  fangsong();
  font-size 20px

//////////////////////////
//        Banner
/////////////////////////////
.site-banner  
  position: relative
  width: 100%
  height: 100%
  z-index: 10
  background-color: white;
.swiper-container 
  width: 100%
  height: 100%
  margin-left: auto;
  margin-right: auto;
.swiper-slide 
  position: relative
  width: 100%
  height: 100%
  overflow: hidden
  text-align: center
  background-color: white
  h1
    simsun()
    font-size: 55px

.swiper-pagination-bullet-active
  background-color: #fff500

