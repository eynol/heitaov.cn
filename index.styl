////////////////////////////
//        Projects
///////////////////////////////
 .project-container
    max-width: 1360px
    padding 100px 10px
    margin-bottom 250px
    display block
    clearfix()
    z-index: 400;
    background-color: white
    box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12);


@media media-mobile
  .project-container
    max-width: 1360px
    padding 100px 10px
    margin-bottom 250px

@media media-pc
  .project-container
      max-width: 1360px
      padding 120px 70px
      margin-bottom 250px
      display block
     

 .project
    float: left;
    width: 100%;


@media media-mobile
  .project
    float: left;
    width: 50%;

@media media-tablet
  .project
    float: left;
    width: 33.3%;

@media media-high
  .project
    float: left;
    width: 25%;


.project-content
  display: block;
  padding: 10px 10px 5px 10px;
  position: relative;
  img
    max-width: 100%;
    background-color: gray;
.project-overlay
  bottom: 0;
  left: 0;
  top: 0;
  right: 0;
  margin: 10px 10px 10px 10px;
  padding: 10px;
  position: absolute;
  background: rgba(7,21,24,0);
  color: rgba(255,255,255,0);
  // box-shadow: 0 10px 25px -5px rgba(0,0,0,0.63), 0px 12px 20px -8px rgba(0,0,0,0.23);
.project-text
  position: absolute;
  bottom: 0;
  margin-bottom: 10px;
  .project-num
    text-decoration: underline
  .project-meta
    text-transform: capitalize
.project:hover
  .project-overlay
    background: rgba(7,21,24,0.8);
  .project-text
    color: white
    
//////////////////////
//        Site Footer
//////////////////////////////
.site-footer
  position: fixed;
  height: 250px;
  width: 100%;
  z-index: -1;
  bottom: 0;
  left: 0;
  background-color: yellow
.footer-content 
  max-width: 1360px;
  margin-left: auto;
  margin-right: auto;
  padding-left: 70px;
  padding-right: 70px;
  height: 250px;
.footer-links
  margin-top: 50px
  a
    padding: 5px 10px
    background-color: black
    font-size: 16px
    line-height: 36px
    color: yellow
    text-decoration: none

.copyright
  color: black
  a
    text-decoration: none
    &:hover
      text-decoration: underline
