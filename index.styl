*
  box-sizing  border-box 
html
  background-color: #e7e7e7
  scroll-behavior: smooth;
.hide{
  display: none;
}

font-default()
    font-family helvetica, "游ゴシック体", 'Hiragino Sans GB', 'Microsoft Yahei Light', 'Microsoft YaHei', 'WenQuanYi Micro Hei', lucida, sans-serif

simsun()
    font-family Arial, Helvetica, tahoma, verdana, "宋体", SimSun, "华文细黑", STXihei, sans-serif

fangsong()
    font-family Georgia, "Times New Roman", "FangSong", "仿宋", STFangSong, "华文仿宋", serif
@font-face
  font-family: against
  src: url(./fonts/againts.ttf), url(./fonts/againts.otf);

.song
  fangsong();
.e444
  color: #444
a
  text-decoration: none;
  color: #444;
  &:hover
    text-decoration: underline
html
body
  height: 100%;
  width: 100%
  margin: 0
  padding: 0
  font-default()


.logo
  position: absolute;
  top: 15px;
  left: 50px;
  z-index: 1;

.seasons
  height: 100%;
  &>div
    overflow: hidden
    position: relative
    height: 100%;
    perspective: 3000px;
    
.seasons .s-title
  position: absolute;
  right: 0;
  bottom: 40px;
  font-size: 5em;
 
  
.poet
  fangsong();
  writing-mode: vertical-rl;
  letter-spacing: 5px;
.white
  display: inline-block
  background-color: white;
  padding: 30px;
.spring
  background-color: #c0ebd7
  .white
    position: absolute;
    bottom: 120px;
    left: 50px;
    max-width: 400px;
  .poet
    position: absolute;
    top: 120px;
    right: 30%;
   
  
dt
  font-weight: bold;
dd 
  transform: translateY(-100%)

.summer
  background-color: #f47983;
  text-align: center
  .white
    display: inline-block
    text-align: left;
    margin-top: 120px;
    

.fail
  background-color: #fff2df
  padding-top: 40px
  &>h1
    text-align: center
    position: relative
    font-weight: normal
    padding: 20px 30px
    
.winter
  background-color: #f0fcff
  simsun()
  .centered
    margin: 60px auto 
    text-align: center;
  .white
    writing-mode: vertical-rl
    text-align: left
    line-height: 2
  .from
    text-align: right;
    font-default()
.collections
  text-align: center;

.card
  display: inline-block;
  text-align: left
  width 20em
  margin: 0 5px
  padding: 20px 30px
  border-radius:  4px
  background-color: #fff;
  // box-shadow: 0 3px 20px rgba(0,0,0,.24)

  h3
    font-weight: normal
  footer
    text-align: right
footer.cite
  position: absolute;
  bottom: 0;
  right: 40px;

@media screen and (max-width:500px)
  .seasons>div.spring 
    height: auto;
  .spring
    .poet
      display: block
      position: relative
      padding-top: 100px;
      padding-right: 30px;
      top: auto
      right: auto
      width: 100%
    .white
      position: relative;
      margin: 50px auto;
      bottom: auto;
      left: 0;
      right: auto;
      display: block;
  .winter .white 
    overflow: auto;
    width: 100%;
  footer.cite
    right: 2em;